   title = {Automatically drawing vegetation classification maps using digital time-lapse cameras in alpine ecosystems},
   volume = {10},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/rse2.364 https://onlinelibrary.wiley.com/doi/abs/10.1002/rse2.364 https://zslpublications.onlinelibrary.wiley.com/doi/10.1002/rse2.364},
