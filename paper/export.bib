   issn = {2045-7758},
   issue = {1},
   journal = {Ecology and Evolution},
   keywords = {Alpine vegetation,Sasa kurilensis,global warming,remote sensing,snowmelt,soil moisture},
   month = {9},
   pages = {85-96},
   publisher = {John Wiley \& Sons, Ltd},
   title = {Invasion of dwarf bamboo into alpine snow-meadows in northern Japan: pattern of expansion and impact on species diversity},
   volume = {1},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/ece3.9 https://onlinelibrary.wiley.com/doi/abs/10.1002/ece3.9 https://onlinelibrary.wiley.com/doi/10.1002/ece3.9},
