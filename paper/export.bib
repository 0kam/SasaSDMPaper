   issue = {1},
   journal = {Grassland Science},
   keywords = {UAV,grassland desertification,hyperspectral image,object identification},
   month = {1},
   pages = {3-11},
   publisher = {John Wiley \& Sons, Ltd},
   title = {Research on deep learning method recognition and a classification model of grassland grass species based on unmanned aerial vehicle hyperspectral remote sensing},
   volume = {69},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/grs.12379 https://onlinelibrary.wiley.com/doi/abs/10.1111/grs.12379 https://onlinelibrary.wiley.com/doi/10.1111/grs.12379},
