   doi = {10.1111/J.1365-2486.2006.01282.X},
   issn = {1365-2486},
   issue = {1},
   journal = {Global Change Biology},
   keywords = {alpine,climate warming,high mountain plants,long,migration,nival ecotone,peripheral populations,plant diversity,species decline,species richness,term monitoring,vegetation change},
   month = {1},
   pages = {147-156},
   publisher = {John Wiley \& Sons, Ltd},
   title = {Signals of range expansions and contractions of vascular plants in the high Alps: observations (1994–2004) at the GLORIA* master site Schrankogel, Tyrol, Austria},
