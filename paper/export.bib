   keywords = {Alpine,Climate warming,GIS,Pinus pumila,Shoot growth},
   month = {11},
   pages = {969-977},
   publisher = {John Wiley \& Sons, Ltd},
   title = {Habitat-specific responses of shoot growth and distribution of alpine dwarf-pine (Pinus pumila) to climate variation},
   volume = {30},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1007/s11284-015-1299-6 https://onlinelibrary.wiley.com/doi/abs/10.1007/s11284-015-1299-6 https://esj-journals.onlinelibrary.wiley.com/doi/10.1007/s11284-015-1299-6},
